<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:id="@+id/item_view">
    <RelativeLayout
        android:layout_width="65dp"
        android:id="@+id/favsongCover"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="10dp"
        >
        <com.bss.arrahmanlyrics.utils.digitalText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a000ffae"
            android:textSize="20sp"
            android:id="@+id/trackNo"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/albumsongdetails"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/favSongtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/capriola"
            android:text="SONG TITLE"
            android:textColor="@color/amber_900"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/favSonglyricist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.8"
            android:ellipsize="end"
            android:fontFamily="@font/capriola"
            android:maxLines="1"
            android:paddingTop="4dp"
            android:text="Song Lyricist"
            android:textColor="@color/teal_800"
            android:textSize="14sp"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>